#!/bin/bash -eu

THIS=$(realpath "$0")
readonly THIS
HERE=$(dirname "$THIS")
readonly HERE
readonly SCP=${SCP:-scp}

# Get valid certificate paths
cert_paths=$("${HERE}/cssh-ensure-cert")
CERT_PATH=$(echo "${cert_paths}" | head -1)
readonly CERT_PATH
KEY_PATH=$(echo "${cert_paths}" | tail -1)
readonly KEY_PATH

${SCP} -i "${CERT_PATH}" -i "${KEY_PATH}" "$@"
